@model MotoXpress3.Models.Bike

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Bike details</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BikeId" />
            <div class="form-group">
                <label asp-for="BikeName" class="control-label">Bike Name</label>
                <input asp-for="BikeName" class="form-control" />
                <span asp-validation-for="BikeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BikeType" class="control-label">Bike Type</label>
                <input asp-for="BikeType" class="form-control" />
                <span asp-validation-for="BikeType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PerDayRental" class="control-label">Per Day Rental</label>
                <input asp-for="PerDayRental" class="form-control" />
                <span asp-validation-for="PerDayRental" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Availability" /> @Html.DisplayNameFor(model => model.Availability)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="BikeImage" class="control-label">Bike Image</label>
                <input asp-for="BikeImage" class="form-control" />
                <span asp-validation-for="BikeImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
