@model IEnumerable<MotoXpress3.Models.RentalRecord>

@{
    ViewData["Title"] = "Index";
}

<style>
    .container {
        margin-top: 2rem;
        padding: 1rem;
        max-width: 1200px;
        margin-left: auto;
        margin-right: auto;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }

        .page-header h1 {
            color: #007bff;
        }

    .btn-primary {
        padding: 0.5rem 1rem;
        background-color: #007bff;
        color: white;
        text-decoration: none;
        border-radius: 0.375rem;
        font-size: 0.875rem;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004bb5;
        }

    .btn-warning {
        padding: 0.25rem 0.5rem;
        background-color: #ffc107;
        color: white;
        text-decoration: none;
        border-radius: 0.375rem;
        font-size: 0.75rem;
    }

        .btn-warning:hover {
            background-color: #e0a800;
            border-color: #d39e00;
        }

    .btn-info {
        padding: 0.25rem 0.5rem;
        background-color: #17a2b8;
        color: white;
        text-decoration: none;
        border-radius: 0.375rem;
        font-size: 0.75rem;
    }

        .btn-info:hover {
            background-color: #117a8b;
            border-color: #117a8b;
        }

    .btn-danger {
        padding: 0.25rem 0.5rem;
        background-color: #dc3545;
        color: white;
        text-decoration: none;
        border-radius: 0.375rem;
        font-size: 0.75rem;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 1rem;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f9f9f9;
    }

    .table-bordered {
        border: 1px solid #dee2e6;
    }

    .table th, .table td {
        text-align: center;
        vertical-align: middle;
        padding: 0.75rem;
        border: 1px solid #dee2e6;
    }

    .table th {
        background-color: #343a40;
        color: white;
    }

    .img-thumbnail {
        max-width: 150px; /* Adjust as needed */
        height: auto;
    }
</style>

@if (User.IsInRole("Admin"))
{
    <div class="container">
        <div class="page-header">
            <h1>Rental Records</h1>
            <a class="btn-primary" asp-action="Create">Create New</a>
        </div>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>User</th>
                    <th>Rental Start Date</th>
                    <th>Rental End Date</th>
                    <th>Bike Name</th>
                    <th>Bike Photo</th>
                    <th>Bike Type</th>
                    <th>Total Cost</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.User.UserName)</td>
                        <td>@item.RentalDate</td>
                        <td>@item.ReturnDate</td>
                        <td>@item.Bike.BikeName</td>
                        <td>
                            <img src="@item.Bike.BikeImage" class="img-thumbnail" alt="Bike Image" />
                        </td>
                        <td>@item.Bike.BikeType</td>
                        <td>@item.TotalCost</td>
                        <td>
                            <a class="btn-warning" asp-action="Edit" asp-route-id="@item.RentalId">Edit</a>
                            <a class="btn-info" asp-action="Details" asp-route-id="@item.RentalId">Details</a>
                            <a class="btn-danger" asp-action="Delete" asp-route-id="@item.RentalId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else if (User.Identity.IsAuthenticated)
{
    <div class="container">
        <h1 class="text-primary" style="margin-bottom: 1rem;">Your Bookings</h1>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Rental Start Date</th>
                    <th>Rental End Date</th>
                    <th>Bike Name</th>
                    <th>Bike Photo</th>
                    <th>Bike Type</th>
                    <th>Total Cost</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.RentalDate</td>
                        <td>@item.ReturnDate</td>
                        <td>@item.Bike.BikeName</td>
                        <td>
                            <img src="@item.Bike.BikeImage" class="img-thumbnail" alt="Bike Image" />
                        </td>
                        <td>@item.Bike.BikeType</td>
                        <td>@item.TotalCost</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}